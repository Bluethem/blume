// Agregar este método al CitasService

agregarCostoAdicional(citaId: string, monto: number, concepto: string): Observable<any> {
  return this.http.post(`${this.apiUrl}/citas/${citaId}/agregar_costo_adicional`, {
    monto,
    concepto
  });
}

// También agregar método para obtener citas con pagos pendientes
getCitasConPagosPendientes(): Observable<any> {
  return this.http.get(`${this.apiUrl}/citas/con_pagos_pendientes`);
}
